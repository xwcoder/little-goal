{
  "compilerOptions": {
    "outDir": "./docs",
    "module": "es6",
    "moduleResolution": "Node",
    "target": "es2017",
    "rootDir": "src",
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "declaration": true,
    "jsx": "react"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.d.ts",
    "**/test/**/*.ts"
  ]
}
